public class UrlParts {
	public String protocol; // http://
	public String hostname; // www.google.com.hk
	/**
	 * :port
	 */
	public int port; // :80
	/**
	 * /path
	 */
	public String path; // /path/subpath
	/**
	 * ;param1=p1Url
	 */
	public String parameters;
	/**
	 * ?query=q1
	 */
	public String query;
	/**
	 * #anchor
	 */
	public String fragment; // #anchor

	public UrlParts() {
		super();
	}

	public UrlParts(String protocol, String hostname, int port, String path,
			String parameters, String query, String fragment) {
		super();
		this.protocol = protocol;
		this.hostname = hostname;
		this.port = port;
		this.path = path;
		this.parameters = parameters;
		this.query = query;
		this.fragment = fragment;
	}
	
}
