package cn.zthz.tool.common;

import java.math.BigDecimal;

public class ResourceUtils {
	
	public static StringBuilder getContent(String body, BigDecimal formatMoney){
		StringBuilder avbody = new StringBuilder();
		avbody.append("#分享任务# ");
		avbody.append(body);
		avbody.append(" 【￥");
		avbody.append(formatMoney);
		avbody.append("】");
		avbody.append(" | ");
		return avbody;
	}
}
